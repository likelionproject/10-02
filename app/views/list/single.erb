<!-- Content -->

<div id="wrapper">
    <div id="mapView" class="mob-min"><div class="mapPlaceholder"><span class="fa fa-spin fa-spinner"></span> 지도를 불러오는 중입니다...</div></div>
    <div id="content" class="mob-max">
        <div class="singleTop">
            <div id="carouselFull" class="carousel slide" data-ride="carousel">
            
                
                <div class="carousel-inner">
                    <div class="item active">
                        <img src="<%=@pid.pf_image%>" alt="First slide"  width="908px" height="429px">
                        <div class="container">
                            <div class="carousel-caption">
                                
                            </div>
                        </div>
                    </div>
                </div>

            </div>
            <!--이미지 슬라이드 끝-->
            
            <div class="summary">
                <div class="row">
                    <div class="col-xs-12 col-sm-12 col-md-8 col-lg-8">
                        <div class="summaryItem">
                            <h1 class="pageTitle"><%=@pid.pf_title%></h1>
                            <div class="address"><span class="glyphicon glyphicon-time"></span> 시간: <%=@pid.pf_date%> <%=@pid.pf_time_start%>~<%=@pid.pf_time_end%></div>
                            <div class="address"><span class="icon-pointer"></span> 위치: <%=@pid.pf_address %></div>
                            <div class="address"><span class="glyphicon glyphicon-bullhorn"></span> 위치 설명: <%= @pid.pf_add_br %></div>
                            
                        
                            
                            <!--좋아요 수-->
                            <div class="favLink">
                                <a href="#" id="like_vote"><span class="fa fa-thumbs-up state-active"></span></a>
                                <span id="like_num"><%=@pid.get_likes.size%></span> 
                                <% unless current_user.nil? %>
                                    <% if current_user.voted_up_on? @pid %>
                                        <span>좋아요 취소하기</span>
                                    <% end %>
                                <% end %>
                            </div><br>
                            <script>
                                $(document).ready(function(){
                                    $("#like_vote").click(function(){
                                        $.get("/culture/single_like/?pid=<%=@pid.id%>",
                                            function(data, status){
                                                location.reload();
                                        });
                                    });
                                });
                            </script>
                            <div class="likeShare">
                                <div class="fb-share-button" 
                                    data-href="http://alone-likelionproject.c9.io/culture/single/<%=@pid.id%>" 
                                    data-layout="button">
                                </div>
                            </div>
                            <div class="clearfix"></div><br>
                            <% unless current_user.nil? %>
                                <% unless current_user.performanceinfo.nil? %>
                                    <% if current_user.performanceinfo.id === @pid.performanceinfo_id || current_user.typenum == 2 %>
                                        <a href="/culture/add_update/<%= @pid.id %>" class="btn btn-round btn-primary">수정</a>
                                        <a href="#" data-toggle="modal" data-target="#remove_alert" class="btn btn-round btn-danger">삭제</a>
                                    <% end %>
                                <% end %>
                            <% else %>
                                 <!-- 로그인 창 -->
                                 
                            <% end %>
                            
                            
                            
                        </div>
                    </div>
                    <div class="col-xs-12 col-sm-12 col-md-4 col-lg-4">
                        <div class="agentAvatar summaryItem">
                            <div class="clearfix"></div>
                            <% if Performanceinfo.find(@pid.performanceinfo_id).team_pic.nil? %>
                                <img class="avatar agentAvatarImg" src="/images/avatar-1.png" alt="avatar">
                            <% else %>
                                <img class="avatar agentAvatarImg" src="<%= Performanceinfo.find(@pid.performanceinfo_id).team_pic %>" alt="avatar">
                            <% end %>
                            <div class="agentName"><%=Performanceinfo.find(@pid.performanceinfo_id).team_name%></div>
                            <a href="/culture/profile/<%=@pid.performanceinfo_id%>" class="btn btn-lg btn-round btn-green contactBtn">아티스트 자세히 보기</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="clearfix"></div>
        <div class="description">
            <h3>공연 설명</h3>
            <p><%= @pid.pf_infor %></p>
        </div>
        
        <div class="share">
            <h3>아티스트 SNS</h3>
            <div class="row">
                <div class="col-xs-6 col-sm-6 col-md-3 col-lg-3 shareItem">
                    <a href="<%= @pfid.team_fb %>" class="btn btn-sm btn-round btn-o btn-facebook"><span class="fa fa-facebook"></span> 페이스북</a>
                </div>

                <div class="col-xs-6 col-sm-6 col-md-3 col-lg-3 shareItem">
                    <a href="<%= @pfid.team_tw %>" class="btn btn-sm btn-round btn-o btn-twitter"><span class="fa fa-twitter"></span> 트위터</a>
                </div>
                <div class="col-xs-6 col-sm-6 col-md-3 col-lg-3 shareItem">
                    <a href="<%= @pfid.team_blog %>" class="btn btn-sm btn-round btn-o btn-google"><span class="fa fa-google-plus"></span> 블로그</a>
                </div>
            </div>
        </div>
        
        <div class="similar">
            <h3>최근 공연 기록</h3>
            <!-- carousel for medium & large devices -->
            <div id="carouselSimilar-1" class="carousel slide visible-lg carousel-col">
                <ol class="carousel-indicators">
                    <li data-target="#carouselSimilar-1" data-slide-to="0" class="active"></li>
                    <li data-target="#carouselSimilar-1" data-slide-to="1"></li>
                </ol>
                <div class="carousel-inner"> 
                    <div class="item active">
                        <div class="row">
                         <% @pfid.newpfs.each do |p| %>
                            <div class="col-xs-4">
                                <div data-linkto="<%= p.id %>" class="card">
                                    <div class="figure">
                                        <img src="<%=p.pf_image%>" alt="image" width="200px" height="150px">
                                        <div class="figView"><span class="icon-eye"></span></div>
                                        <div class="figType">공연 종료</div>
                                    </div>
                                    <h2><%=p.pf_title%></h2>
                                    <div class="cardAddress"><span class="icon-pointer"></span><%=p.pf_address_sub%></div>
                                    <div class="clearfix"></div>
                                </div>
                            </div>
                         <% end %>
                         </div>
                    </div>
                </div>
                <a class="left carousel-control" href="#carouselSimilar-1" role="button" data-slide="prev"><span class="fa fa-chevron-left"></span></a>
                <a class="right carousel-control" href="#carouselSimilar-1" role="button" data-slide="next"><span class="fa fa-chevron-right"></span></a>
            </div>
        </div>
                            <!--지나간 공연 정보 띄우는거 끝-->
        
        
        <div class="comments">
            <h3><span><%= @pid.comments.count %></span> 후기 모음</h3>
            <div class="comment">
            </div>
            <% @pid.comments.each do |c| %>
            
                <div class="comment">
                    <div class="commentAvatar">
                        <img class="avatar" src="/images/avatar-3.png" alt="avatar"  >
                        <div class="commentArrow"><span class="fa fa-caret-left"></span></div>
                    </div>
                    <div class="commentContent">
                        <div class="commentName"><%= User.find(c.user_id).username %></div>
                        <div class="commentBody">
                            <%= c.context %>
                        </div>
                        <div class="commentActions">
                            <div class="commentTime"><span class="icon-clock"></span> <%= c.updated_at.to_formatted_s(:db) %></div>
                            <% unless current_user.nil? %>
                                <% if current_user.id == c.user_id || current_user.typenum == 2 %>
                                <ul>
                                    <li><a href="#" data-toggle="modal" data-target="#remove_reply_alert"><span class="fa fa-trash-o"></span></a></li>
                                </ul>
                                <% else %>
                                <% end %>
                            <% end %>
                            <div class="clearfix"></div>
                        </div>
                    </div>
                    <div class="clearfix"></div>
                </div>
            <% end %>
        </div>
            
            
        </div>
    </div>
    <!--리플과 리플의 리플 남기기 끝-->
    
    <!--댓글 입력창-->
    <div class="commentsFormWrapper">
        <div class="cfAvatar">
            <img class="avatar" src="/images/avatar-1.png" alt="avatar">
        </div>
        <form class="commentsForm" action="/culture/comment_post" method="post">
            <div class="input-group">
                <% if current_user.nil? %>
                    <input type="text" name="context" class="form-control" placeholder="로그인 후 후기를 남겨주세요!">
                    <span class="input-group-btn"><button class="btn btn-green">Post</button></span>
                <% else %>
                    <input type="hidden" name="newpf_id" value="<%=@pid.id%>">
                    <input type="hidden" name="user_id" value="<%=current_user.id%>">
                    <input type="text" name="context" class="form-control" placeholder="후기를 남겨 주세요!">
                    <span class="input-group-btn"><button class="btn btn-green" type='submit'>Post</button></span>
                <% end %>
            </div>
        </form>
        <div class="clearfix"></div>
    </div>
    <div class="clearfix"></div>
</div>
<!--댓글 입력창 끝-->

        <!--삭제 뜨는거-->
<div class="modal fade" id="remove_alert" role="dialog" aria-labelledby="remove_alertLabel" aria-hidden="true">
    <div class="modal-dialog modal-sm">
        <div class="modal-content">
            <div class="modal-header">
                
                <center>정말로 삭제하시겠습니까?</center>
                
            </div>
            <div class="modal-body">
                <center><a href="/culture/delete/<%= @pid.id %>"><button type="button" class="btn btn-primary">OK</button></a>
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button></center>                        
            </div>
        </div>
    </div>
</div>

<!--로그인 팝업 뜨는거 -->
<div class="modal fade" id="signin" role="dialog" aria-labelledby="signinLabel" aria-hidden="true">
    <div class="modal-dialog modal-sm">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title" id="signinLabel">로그인</h4>
            </div>
            <div class="modal-body">
                
              <%= form_for(resource, as: resource_name, url: session_path(resource_name), role: "form") do |f| %>
                <div class="field">
                  <div class="form-group">
                    <%= f.text_field :username, autofocus: true, placeholder: "아이디", class: "form-control"  %>
                  </div>
                </div>
              
                <div class="field">
                  <div class="form-group">
                    <%= f.password_field :password, autocomplete: "off", placeholder: "비밀번호", class: "form-control" %>
                  </div>
                </div>
              
                <% if devise_mapping.rememberable? -%>
                  <div class="field">
                    <div class="form-group">
                      <%= f.check_box :remember_me %>
                      <%= f.label :remember_me %>
                    </div>
                  </div>
                <% end %>
              
                <div class="actions">
                  <div class="form-group">
                    <%= f.submit "로그인", class: "btn btn-lg btn-green", style: "width: 100%" %>
                  </div>
                </div>
              <% end %>             
            </div>
        </div>
    </div>
</div>


<!--댓글 지우기 확인창-->

<div class="modal fade" id="remove_reply_alert" role="dialog" aria-labelledby="remove_alertLabel" aria-hidden="true">
    <div class="modal-dialog modal-sm">
        <div class="modal-content">
            <div class="modal-header">
                
                <center>정말로 댓글을 삭제하시겠습니까?</center>
                
            </div>            
            <div class="modal-body">
            <% @pid.comments.each do |c| %>
                <center><a href="/culture/comment_destory/?pid=<%=@pid.id%>&cid=<%= c.id %>">
                <% end %>
                <button type="button" class="btn btn-primary">OK</button></a>
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button></center>                        
            </div>
            
        </div>
    </div>
</div>

