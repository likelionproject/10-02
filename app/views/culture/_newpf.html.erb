<% unless newpf.pf_date.nil? %>
    <% if newpf.pf_date >= Date.today # 지나간 공연 배제 %>
    <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6">
        <a href="/culture/single/<%= newpf.id %>" class="card">
            
            <div class="figure">
                <img src="<%= newpf.pf_image %>" alt="image" width="200px" height="200px">
                <div class="figView"><span class="icon-eye"></span></div>
                <div class="figType">공연예정</div>
            </div>
            <h2><%= newpf.pf_title %></h2>
            <br>
            <div class="cardAddress"><span class="icon-calendar">  </span> 날짜 : <%= newpf.pf_date %>  </span> </div>
            <div class="cardAddress"><span class="fa fa-clock-o">  </span> 시간 : <%=newpf.pf_time_start%>~<%=newpf.pf_time_end%> </span></div>
            <div class="cardAddress"><span class="icon-pointer">  </span> 위치 : <%= newpf.pf_address_sub %> </div>
            <div class="cardAddress"><span class="fa fa-child">  </span> 위치 설명 : <%= newpf.pf_add_br %> </div>
            <div class="cardAddress"> 장르 : <%= newpf.pf_kind %> </div>
    
            <!--별점-->
            
            <div class="clearfix"></div>
        </a>
    </div>
    <% end %>
<% end %>