
<div class="row">
  <div class="col-xs-12 col-sm-12 col-md-6 col-md-offset-3 col-lg-offset-4 col-lg-4">
    <br><br>
    <h2><a href="/"><img src="/images/mylogo6.png" width="150px" height="90px"></a><br>로그인</h2></h2>
    
    <h4> 아이디와 비밀번호를 확인해주세요</h4>
    <br>

      
    
    <%= form_for(resource, as: resource_name, url: session_path(resource_name), role: "form") do |f| %>
      <div class="field">
        <div class="form-group">
          <%= f.text_field :username, autofocus: true, placeholder: "아이디", class: "form-control"  %>
        </div>
      </div>
    
      <div class="field">
        <div class="form-group">
          <%= f.password_field :password, autocomplete: "off", placeholder: "비밀번호", class: "form-control" %>
        </div>
      </div>
    
      <% if devise_mapping.rememberable? -%>
        <div class="field">
          <div class="form-group">
            <%= f.check_box :remember_me %>
            <%= f.label :로그인유지 %>
          </div>
        </div>
      <% end %>
    
      <div class="actions">
        <div class="form-group">
          <%= f.submit "로그인", class: "btn btn-lg btn-green", style: "width: 100%" %>
        </div>
      </div>
    <% end %>
    <!--<%= render "devise/shared/links" %>-->
  </div>
</div>


