
<div class="row">
  <div class="col-xs-12 col-sm-12 col-md-6 col-md-offset-3 col-lg-offset-4 col-lg-4">
    <br><br>
    
    <h2> <a href="/"><img src="/images/mylogo2.png" width="50px" height="90px"></a> 회원가입</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {id: "sign_up_form"}) do |f| %>
      <%= devise_error_messages! %>
    
      <div class="field">
          <div class="form-group">
              <%= f.text_field :username, autofocus: true, placeholder: "아이디", class: "form-control" %>
          </div>
      </div>
        
      <div class="field">
        <div class="form-group">
          <%= f.email_field :email, autofocus: true, placeholder: "이메일 주소", class: "form-control" %>
        </div>
      </div>
    
      <div class="field">
        <div class="form-group">
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> 자 이상 입력해 주세요)</em>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "off", placeholder: "비밀번호", class: "form-control" %>
        </div>
      </div>
    
      <div class="field">
        <div class="form-group">
          <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "비밀번호 확인", class: "form-control" %>
        </div>
      </div>
      <div class="field">
        <div class="form-group">
          <%= f.hidden_field :typenum, autocomplete: "off", value: "-1", id: "typenum" %>
        </div>
      </div>
      
        <div class="field">
            <div class="form-group"> 
                <div class="btn-group-justified">
                    <button type="button" class="btn btn-lg btn-yellow" id="select_viewer" style="width: 49%; display: inline;" onclick="setViewer()">관객</button>
                    <button type="button" class="btn btn-lg btn-red" id="select_performer" style="width: 49%; display: inline;" onclick="setPerformer()">공연팀</button>
                </div>
            </div>
        </div>
        
        
        
      <div class="actions">
        <div class="form-group">
          <div class="btn-group-justified">
              <button type="button" id="submit_button"class="btn btn-lg btn-green" onclick="isSelectedType()" style="width: 100%">회원가입</button>
          </div>
        </div>
      </div>
      <script>
            function setViewer(){
                $('#typenum').attr("value", 0);
            }
            function setPerformer(){
                $('#typenum').attr('value', 1);
            }
            function isSelectedType(){
                if ($('#typenum').val() == "-1"){
                    alert("회원 종류를 선택해주세요. ");
                }
                else {
                    $("#submit_button").attr("type", "submit");
                }
            }
        </script>
    <% end %>
    
    
    
    <p class="help-block">이미 회원이세요? <a href="/" class="modal-si text-green">로그인</a></p>
    
    <!--<%= render "devise/shared/links" %>-->
  </div>
</div>